    <div class="container-fluid" id="header">

        <div class="hamburgerIcon" onclick="ToggleMenu(this)">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>

        <a class="navbar-brand" id="siteName">Faksistent</a>

    </div>

    <nav id="sideBarNav" class="container col-md-2 float-left">
        <span class="navbar-toggler-icon"></span>
        <ul>
            <li>
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li>
                <a class="nav-link text-light" asp-area="" asp-controller="Schedule" asp-action="Index">Schedules</a>
            </li>
            <li>
                <a class="nav-link text-light" asp-area="" asp-controller="Faculty" asp-action="Index">Study programs</a>
            </li>
            <li>
                <a class="nav-link text-light" asp-area="" asp-controller="Schedule" asp-action="Create">Create schedule</a>
            </li>
            @if (!User.Identity.IsAuthenticated)
            {
                <li>
                    <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Login">Login</a>
