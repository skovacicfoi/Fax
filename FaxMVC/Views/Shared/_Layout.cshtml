                <li>
                    <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="LogOut">Log out</a>
                </li>
            }


        </ul>
    </nav>



    <div class="container-fluid col-md-10 offset-2" style="padding:0;" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
