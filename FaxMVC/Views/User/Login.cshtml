@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h3>Login</h3>
<div class="container-fluid col-md-6 offset-3">
    <form method="post">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="create-bloodSugar-details">

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="text" asp-for="Username" required minlength="2">
                                <label class="form-label">Email or Username</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="password" asp-for="Password" required minlength="2">
                                <label class="form-label">Password</label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary waves-effect" asp-controller="User" asp-action="Login">Save</button>
            <a class="page-link" asp-controller="User" asp-action="ForgotPassword" >Forgot Password?</a>
        </div>
    </form>
</div>